    <update id="addMajorTask" parameterType="Task">
        update task
        set task_major = 1
        where task_id = #{task_id}
    </update>

    <update id="deleteTodayTask" parameterType="int">
        update task
        set task = 1
        where task_id = #{task_id}
    </update>
    <update id="deleteMajorTask" parameterType="int">
        UPDATE task
        SET task_major = 0
        where task_id = #{task_id}
    </update>
