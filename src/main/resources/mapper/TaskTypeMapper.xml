<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.jing.TaskDao">
    <resultMap type="TaskType" id="taskType" >
        <id property="typeId" column="type_id"/>
        <result property="typeName" column="type_name"/>
    </resultMap>

    <insert id="addTaskType" parameterType="TaskType">
        INSERT INTO task_type(type_id,type_name)
        VALUE (#{type_id},#{type_name})
    </insert>

    <update id="updateTaskType" parameterType="TaskType">
        UPDATE task_type
        SET TYPE_NAME = #{typeName}
        WHERE  type_id = #{typeId}
    </update>

    <select id="selectTaskType" resultType="TaskType">
        SELECT task_name,start_time,end_time,remark,task_major,task_finish,type_name
        FROM task,task_type
        WHERE task.type_id = task_type.type_id
   </select>

</mapper>
